{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! Everything inside the #post tags pulls data from the post }}
<div class="row tn-main-content tn-container">
    {{#post}}
    {{! main content }}
        <div class="main-content-wrap single-wrap col-md-8 col-sm-12" role="main">
            <article class="single-post" itemtype="http://schema.org/Article" itemscope=itemscope">
                <div  class="post-title single-title page-title"><h1 itemprop="name">{{{title}}}</h1></div>
                {{#if image}}
                    <div class="thumb-wrap">
                        <img class="full-image" src="{{image}}" alt="{{{title}}}" itemprop="image">
                    </div>
                {{/if}}
                <div class="entry">
                    {{content}}
                </div>
            </article>
        </div>

        {{! main sidebar }}
        <div id="sidebar" class="sidebar-wrap col-md-4 col-sm-12" role="complementary" itemscope="itemscope" itemtype="http://schema.org/WPSideBar">
            {{> sidebar }}
        </div>
    {{/post}}
</div>